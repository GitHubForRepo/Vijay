
@{
    ViewData["Title"] = "Users";
}
@model UserViewModel

<h1>Users</h1>
@using (Html.BeginForm("Users", "UserProfile", FormMethod.Post))
{
    @Html.AntiForgeryToken();
    <div>
        @Html.LabelFor(model => model.FirstName) @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
    </div>

    <div>
        @Html.LabelFor(model => model.LastName) @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
    </div>

    <input type="submit" value="Submit" />
    @Html.ActionLink("Click to view data", "Download", "UserProfile")
}

@if (ViewBag.Messge != null)
{
    <div class="alert alert-success p5 mb20 mtm20" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <p>@ViewBag.Messge</p>
    </div>
}

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

